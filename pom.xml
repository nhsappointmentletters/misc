    <groupId>uk.gov.gsi.hmrc.cds.search</groupId>
    <artifactId>customs-search-service</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Customs Declaration Search Service</name>
    <description>ReST Service for customs declaration search</description>

    <parent>
